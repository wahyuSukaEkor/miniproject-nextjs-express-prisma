generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username      String        @unique
  email         String        @unique
  password      String
  isAdmin       Boolean
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  referral_code String?       @unique
  id            Int           @id @default(autoincrement())
  Event         Event[]
  point         Point?
  Review        Review[]
  Transaction   Transaction[]
  Voucher       Voucher[]

  @@map("users")
}

model Point {
  id           Int      @id @default(autoincrement())
  user_id      Int      @unique
  total_point  Int
  expired_date DateTime
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  user         User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("points")
}

model Event {
  user_id         Int
  event_name      String
  price           Int
  description     String        @db.Text
  start_date      DateTime
  end_date        DateTime
  available_seats Int
  max_capacity    Int
  buy_limit       Int
  category_id     Int
  location_id     Int
  thumbnails_path String
  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
  id              Int           @id @default(autoincrement())
  category        EventCategory @relation(fields: [category_id], references: [id])
  location        Location      @relation(fields: [location_id], references: [id])
  user            User          @relation(fields: [user_id], references: [id])
  Review          Review[]
  Transaction     Transaction[]
  Voucher         Voucher[]

  @@index([category_id], map: "events_category_id_fkey")
  @@index([location_id], map: "events_location_id_fkey")
  @@index([user_id], map: "events_user_id_fkey")
  @@map("events")
}

model Location {
  id    Int     @id @default(autoincrement())
  name  String
  Event Event[]

  @@map("locations")
}

model EventCategory {
  id            Int     @id @default(autoincrement())
  category_name String
  Event         Event[]

  @@map("categories")
}

model Review {
  id         Int      @id @default(autoincrement())
  user_id    Int
  rating     Int
  comment    String?  @db.Text
  created_at DateTime @default(now())
  eventId    Int
  event      Event    @relation(fields: [eventId], references: [id])
  user       User     @relation(fields: [user_id], references: [id])

  @@index([eventId], map: "reviews_eventId_fkey")
  @@index([user_id], map: "reviews_user_id_fkey")
  @@map("reviews")
}

model Transaction {
  user_id           Int
  payment_status    PaymentStatus
  base_price        Int
  quantity          Int
  total_price       Int
  discounted_price  Int?
  point_used        Int?
  voucer_id         Int?
  payment_path      String?
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt
  eventId           Int
  id                Int                 @id @default(autoincrement())
  TransactionDetail TransactionDetail[]
  event             Event               @relation(fields: [eventId], references: [id])
  user              User                @relation(fields: [user_id], references: [id])
  voucer            Voucher?            @relation(fields: [voucer_id], references: [id])

  @@index([eventId], map: "transactions_eventId_fkey")
  @@index([user_id], map: "transactions_user_id_fkey")
  @@index([voucer_id], map: "transactions_voucer_id_fkey")
  @@map("transactions")
}

model Voucher {
  name         String
  discount     Int
  expired_date DateTime?
  max_usage    Int
  usage        Int           @default(0)
  user_id      Int?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  eventId      Int?
  id           Int           @id @default(autoincrement())
  Transaction  Transaction[]
  event        Event?        @relation(fields: [eventId], references: [id])
  user         User?         @relation(fields: [user_id], references: [id])

  @@index([eventId], map: "vouchers_eventId_fkey")
  @@index([user_id], map: "vouchers_user_id_fkey")
  @@map("vouchers")
}

model TransactionDetail {
  id             Int         @id @default(autoincrement())
  transaction_id Int
  ticket_code    String
  transaction    Transaction @relation(fields: [transaction_id], references: [id])

  @@index([transaction_id], map: "transaction_details_transaction_id_fkey")
  @@map("transaction_details")
}

enum PaymentStatus {
  waiting
  paid
  success
  failed
}
